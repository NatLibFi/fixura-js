{
	"name": "@natlibfi/fixura",
	"description": "Loading test fixtures is as easy as ABC",
	"author": {
		"name": "The National Library of Finland"
	},
	"keywords": [
		"fixture",
		"test",
		"unit"
	],
	"homepage": "https://github.com/natlibfi/fixura-js",
	"bugs": {
		"url": "https://github.com/natlibfi/fixura-js/issues"
	},
	"repository": {
		"type": "git",
		"url": "git@github.com:natlibfi/fixura-js.git"
	},
	"license": "MIT",
	"version": "4.0.0-alpha.7",
	"main": "./dist/index.js",
	"module": "./dist/index.mjs",
	"exports": {
		"import": "./dist/index.mjs",
		"require": "./dist/index.js"
	},
	"engines": {
		"node": ">=22"
	},
	"publishConfig": {
		"access": "public"
	},
	"scripts": {
		"prepare": "npm run build",
		"build": "npm run build:cjs && npm run build:mjs",
		"build:cjs": "esbuild src/**/*.mjs --sourcemap --platform=node --main-fields=main --outdir=dist --allow-overwrite --analyze",
		"build:mjs": "esbuild src/**/*.mjs --sourcemap --platform=node --main-fields=module --outdir=dist --allow-overwrite --out-extension:.js=.mjs --format=esm",
		"lint": "eslint ./src",
		"lint:dev": "eslint --fix ./src",
		"test:base": "node --test --experimental-test-coverage --test-reporter=spec",
		"test": "npm run lint && npm run test:base",
		"watch:test": "cross-env DEBUG=@natlibfi/* NODE_ENV=test node --watch --test --experimental-test-coverage --test-reporter=spec",
		"dev": "npm run watch:test",
		"dev:debug": "cross-env LOG_LEVEL=debug DEBUG=@natlibfi/* NODE_ENV=test npm run watch:test"
	},
	"devDependencies": {
		"cross-env": "^7.0.3",
		"esbuild": "0.25.6",
		"eslint": "^9.30.0"
	}
}