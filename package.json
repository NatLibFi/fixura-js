{
	"name": "@natlibfi/fixura",
	"description": "Loading test fixtures is as easy as ABC",
	"author": {
		"name": "The National Library of Finland"
	},
	"keywords": [
		"fixture",
		"test",
		"unit"
	],
	"homepage": "https://github.com/natlibfi/fixura-js",
	"bugs": {
		"url": "https://github.com/natlibfi/fixura-js/issues"
	},
	"repository": {
		"type": "git",
		"url": "git@github.com:natlibfi/fixura-js.git"
	},
	"publishConfig": {
		"access": "public"
	},
	"license": "LGPL-3.0+",
	"version": "1.0.0",
	"main": "./dist/index.js",
	"engines": {
		"node": ">=12"
	},
	"scripts": {
		"prepublishOnly": "npm run build:transpile",
		"check-deps": "npm-check;exit 0",
		"lint": "eslint --fix src",
		"test:base": "cross-env NODE_ENV=test nyc mocha --require @babel/register",
		"test": "npm run lint && npm run test:base -- src/*.spec.js && npm run check-coverage",
		"check-coverage": "nyc check-coverage --per-file",
		"build:transpile": "babel src --source-maps --delete-dir-on-start --out-dir=dist",
		"build": "npm run build:transpile && npm run check-deps",
		"watch": "cross-env DEBUG=1 NODE_ENV=test nodemon -w src --exec 'npm test'"
	},
	"dependencies": {
		"@babel/register": "^7.10.1"
	},
	"devDependencies": {
		"@babel/cli": "^7.10.1",
		"@babel/core": "^7.10.2",
		"@babel/preset-env": "^7.10.2",
		"babel-eslint": "^10.1.0",
		"babel-plugin-istanbul": "^6.0.0",
		"chai": "^4.2.0",
		"cross-env": "^7.0.2",
		"eslint": "^7.1.0",
		"eslint-config-xo": "^0.29.1",
		"eslint-plugin-import": "^2.20.2",
		"mocha": "^7.2.0",
		"nodemon": "^2.0.4",
		"npm-check": "^5.9.2",
		"nyc": "^15.1.0"
	},
	"eslintConfig": {
		"parser": "babel-eslint",
		"plugins": [
			"import"
		],
		"extends": [
			"xo",
			"plugin:import/errors"
		],
		"rules": {
			"prefer-arrow-callback": [
				"error"
			]
		},
		"env": {
			"mocha": true
		}
	},
	"babel": {
		"presets": [
			[
				"@babel/preset-env",
				{
					"targets": {
						"node": "12"
					}
				}
			]
		],
		"env": {
			"test": {
				"plugins": [
					"istanbul"
				]
			}
		}
	},
	"nyc": {
		"exclude": [
			"**/*.spec.js"
		],
		"reporter": [
			"lcov",
			"html"
		],
		"require": [
			"@babel/register"
		],
		"sourceMap": false,
		"instrument": false,
		"lines": 80,
		"statements": 80,
		"functions": 80,
		"branches": 80
	}
}
